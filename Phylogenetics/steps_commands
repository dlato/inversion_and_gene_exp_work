#run mauve with outgroup
\rm ../Genomes/outgroup/*.sslist ../Genomes/ref/*.sslist ../Genomes/*.sslist
time /home/dlato/Mauve_snapshot/mauve_snapshot_2012-06-07/linux-x64/progressiveMauve --output=5_Ecoli_chromosomes_outgroup_mauve_2Oct20.xmfa ../Genomes/ref/*.gbk ../Genomes/nonref/*.gbk ../Genomes/outgroup/*.gbk

#get block info
foreach x (*.xmfa)
grep "[=>]" $x > `basename $x xmfa`txt
end

#edit fasta header
foreach x (../../Genomes/*/)
cd $x
foreach y (*.fasta)
perl -p -i.bak -e "s/> />/g" $y
end
cd ..
end

#cut blocks commands
~/CODE/cut_blocks.pl > run_samtools

#run samtools
sh run_samtools

#check all taxa in block
/home/dlato/CODE/check_all_taxa_in_block.pl *.xmfa 7
mkdir GoodBlocks/
mkdir BadBlocks/
sh *_all_taxa_in_block
mv Block* BadBlocks/


